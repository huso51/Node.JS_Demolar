mixin createProduct(product)
    .col-md-4
        .card
            img(src=`/img/${product.image}` alt=`${product.price}`).card-img-top
            .card-body
                h4.card-title
                    a(href=`/products/${product._id}`) #{product.name}
            
                small.text-muted
                    i.fas.fa-lira-sign #{product.price}
        
            .card-footer.text-center
                a(href="#").btn.btn-secondary.btn-sm Detaylar
                form(action='/card' method='POST')
                    input(type="hidden" name='_csrf' value=`${csrfToken}`)
                    input(type='hidden'  value=`${product._id}`)
                    input(type='text' name='productId' value=`${product._id}`)
                    button(type='submit').btn.btn-secondary.btn-sm.ml-3 KartÄ± ekle 